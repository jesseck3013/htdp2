; A SIGS is one of: 
; – (make-aim UFO Tank)
; – (make-fired UFO Tank Missile)
; interpretation represents the complete state of a 
; space invader game

(define (SIGS? input)
  (or (aim? input)
      (fired? input)))

; A Coordinate is one of: 
; – a NegativeNumber 
; interpretation on the y axis, distance from top
; – a PositiveNumber 
; interpretation on the x axis, distance from left
; – a Posn
; interpretation an ordinary Cartesian point
(define (Coordinate? input)
  (cond 
    [(and
      (number? input)
      (not (= input 0))) #true]
    [(posn? input) #true]
    [else #false]))

; A VAnimal is either
; – a VCat
; – a VCham
(define (VAnimal? input)
  (or (VCat? input)
      (VCham? input)))
  

