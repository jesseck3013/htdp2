; A Node is a Symbol.

; A Graph is [List-of [List-of Node]]

(define (neighbors n g)
  (local ((define filtered-list 
            (filter (lambda (node)
                      (equal? (first node) n)) g))
          )
    (rest (first filtered-list))))

(define sample-graph
  '((A B E)
    (B E F)
    (C D)
    (D)
    (E C F)
    (F D G)
    (G)))

(check-expect (neighbors 'A sample-graph) '(B E))
(check-expect (neighbors 'G sample-graph) '())
