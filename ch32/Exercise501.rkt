; N -> Number 
; adds n to pi without using +
(check-within (add-to-pi 2) (+ 2 pi) 0.001)
(define (add-to-pi n)
  (local (
          ; acc is the summation of the numbers
          ; subtracted from n and pi.
          (define (add-to-pi/acc n acc)
           (cond
             [(zero? n) acc]
             [else (add-to-pi/acc (sub1 n)
                                  (add1 acc))])))
    (add-to-pi/acc n pi)))

